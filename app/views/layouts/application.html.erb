<!DOCTYPE html>
<html>
<head>
  <title>Claw</title>
  <%= stylesheet_link_tag    "bootstrap" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "bootstrap-responsive" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
  <div class="container">
 
    <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    
    <!-- Be sure to leave the brand out there if you want it shown -->
    <a class="brand" href="/">CLAW</a>
    <ul class="nav">
      <li <%= "class='active'" if current_page?(users_path) %>>
        <%= link_to "artists", users_path %>
      </li>
      <li <%= "class='active'" if current_page?(bands_path) %>>
        <%= link_to "bands", bands_path %>
      </li>
    </ul>
    <!-- Everything you want hidden at 940px or less, place within here -->
    <div class="nav-collapse">
      <!-- .nav, .navbar-search, .navbar-form, etc -->
      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <%= render "users/menu" %>
        <% else %>
        <li <%= "class='active'" if current_page?(new_user_session_path) %>>
          <%= link_to 'login', new_user_session_path %>
        </li>
        <li <%= "class='active'" if current_page?(new_user_registration_path) %>>
          <%= link_to 'sign up', new_user_registration_path %>
        </li>
        <% end %>
      </ul>
    </div>
    
  </div>
  </div>
</div>

<div class="container-fluid">
  <%- flash.each do |name, msg| -%>
  <div class="row-fluid"><div class="span6">
  <%= content_tag :div, msg, :class => "flash alert" if msg.is_a?(String) %>
  </div></div>
  <%- end -%>
  <div class="row-fluid">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
